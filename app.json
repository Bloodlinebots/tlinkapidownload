{
  "name": "Terabox Downloader Bot",
  "description": "Heroku-based Telegram userbot that downloads & uploads Terabox videos using string session.",
  "repository": "https://github.com/your/repo",  
  "keywords": ["telegram", "terabox", "ffmpeg", "telethon", "heroku"],
  "env": {
    "API_ID": {
      "description": "Your Telegram API ID",
      "required": true
    },
    "API_HASH": {
      "description": "Your Telegram API HASH",
      "required": true
    },
    "SESSION_STRING": {
      "description": "Telethon String Session (User)",
      "required": true
    },
    "MONGO_URI": {
      "description": "Your MongoDB Atlas URI",
      "required": true
    },
    "BOT_USERNAME": {
      "description": "Telegram username where files will be sent (e.g. Tharki_hub_bot)",
      "required": true
    }
  },
  "buildpacks": [
    {
      "url": "heroku/python"
    }
  ]
}
